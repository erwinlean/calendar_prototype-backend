<!DOCTYPE html>
<html>
<head>
    <title>Reservas & Turnos</title>

    <style>
        html,body{
            background-color: white;
            color: grey;
            font-size: large;
            padding: 0px;
            margin: 0px;
        }
        h1{
            padding: 10px;
            text-decoration:underline;
        }
        table{
            border-collapse: collapse;
            padding: 10px;
            margin: 15px;
            width: 85%;
        }
        th, td{
            border: 1px solid black;
            text-align: left;
            padding: 8px;
        }
        th{
            background-color: #dddddd;
            color: black;
        }
        img{
            width: auto;
            height: auto;
            max-width: 150px;
            max-height: fit-content;
        }
        div{
            display: flex;
        }
    </style>
</head>
<body>
    <div>
        <img src="https://caliz.netlify.app/images/logo.jpeg">
        <h1>Reservas & turnos:</h1>
    </div>
    <table>
        <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Telefono</th>
            <th>Dia</th>
            <th>Hora</th>
            <th>Mail</th>
        </tr>
        <!--Sort reservation by day and hour then display on a the table-->
        <% reservations.sort((CompareA, CompareB) => {
            if (CompareA.day !== CompareB.day) {
                return CompareA.day.localeCompare(CompareB.day);
            } else {
                return parseInt(CompareA.hour) - parseInt(CompareB.hour);
            };
        });
        for(var i=0; i<reservations.length; i++) { %>
            <tr>
                <td><%= reservations[i].name %></td>
                <td><%= reservations[i].type %></td>
                <td><%= reservations[i].celphone %></td>
                <td><%= reservations[i].day %></td>
                <td><%= reservations[i].hour %></td>
                <td><%= reservations[i].email %></td>
            </tr>
        <% } %>
    </table>
</body>
</html>
